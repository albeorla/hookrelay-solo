{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "aws",
    "e2e",
    "infra",
    "prisma",
    "scripts",
    "services",
    "docs",
    "docker",
    "jest.config.js",
    "jest.setup.js",
    "playwright.config.ts",
    "playwright-report",
    "test-results",
    "src/**/__tests__/**",
    "src/**/*.test.*",
    "src/**/*.spec.*",
    "src/core/**"
  ]
}

