# Production Environment Configuration Example
# Copy this file to .env.production for production deployment

# Database (use production database URL)
DATABASE_URL="postgresql://prod_user:secure_password@prod-db.amazonaws.com:5432/hookrelay_prod"

# NextAuth.js (use secure secrets)
AUTH_SECRET="super-secure-production-secret-at-least-32-characters"
AUTH_DISCORD_ID="your-production-discord-client-id"
AUTH_DISCORD_SECRET="your-production-discord-client-secret"

# Application Environment
NODE_ENV="production"

# AWS Configuration
AWS_REGION="us-east-1"

# AWS Credentials (prefer IAM roles over environment variables in production)
# If using IAM roles (recommended), leave these blank
# AWS_ACCESS_KEY_ID=""
# AWS_SECRET_ACCESS_KEY=""

# If you must use credentials, ensure they have minimal required permissions
# AWS_ACCESS_KEY_ID="AKIA..."
# AWS_SECRET_ACCESS_KEY="your-secret-access-key"

# AWS Service Endpoints (leave blank for production AWS - no LocalStack)
# AWS_DDB_ENDPOINT=""
# AWS_SQS_ENDPOINT=""
# AWS_S3_ENDPOINT=""

# Production AWS Resource Names
AWS_DDB_ENDPOINTS_TABLE="prod-hookrelay-endpoints"
AWS_DDB_DELIVERIES_TABLE="prod-hookrelay-deliveries"
AWS_SQS_QUEUE_URL="https://sqs.us-east-1.amazonaws.com/YOUR_ACCOUNT_ID/prod-hookrelay-delivery-attempts"
AWS_S3_DLQ_BUCKET="prod-hookrelay-dlq"

# Ensure environment validation runs in production
# SKIP_ENV_VALIDATION=""